{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".",
  "builds": [
    {
      "src": "dist/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api-docs(.*)",
      "dest": "dist/app.js"
    },
    {
      "src": "/api",
      "dest": "dist/app.js"
    },
    {
      "src": "/readings/(.*)",
      "dest": "dist/app.js"
    },
    {
      "src": "/price-plans/(.*)",
      "dest": "dist/app.js"
    },
    {
      "src": "/price-plans",
      "dest": "dist/app.js"
    },
    {
      "src": "^/$",
      "dest": "/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "dist/app.js"
    }
  ]
}
